<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAppointmentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Appointment Scheduling"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/timeSlotSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Patient Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/patientNameInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/patientAgeInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Age"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/patientPhoneInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/patientEmailInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="8dp"/>


        <EditText
            android:id="@+id/symptomsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brief description of symptoms"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>


        <CheckBox
            android:id="@+id/emergencyCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is an emergency"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/bookAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:backgroundTint="@android:color/holo_blue_dark"/>

    </LinearLayout>
</ScrollView>